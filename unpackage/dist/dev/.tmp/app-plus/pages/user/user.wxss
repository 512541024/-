page {
  background-color: #f1f1f1;
  font-size: 30rpx;
}
.header {
  background: #fff;
  height: 290rpx;
  padding-bottom: 110rpx;
}
.header .bg {
    width: 100%;
    height: 200rpx;
    padding-top: 100rpx;
    background-color: #4191ea;
}
.box {
  width: 650rpx;
  height: 280rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0 5rpx 20rpx 0rpx rgba(0, 0, 150, 0.2);
}
.box .box-hd {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
            flex-direction: row;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.box .box-hd .avator {
      width: 160rpx;
      height: 160rpx;
      background: #fff;
      border: 5rpx solid #fff;
      border-radius: 50%;
      margin-top: -80rpx;
      overflow: hidden;
}
.box .box-hd .avator ._img {
        width: 100%;
        height: 100%;
}
.box .box-hd .phone-number {
      width: 100%;
      text-align: center;
}
.box .box-hd .login-title {
      width: 100%;
      text-align: center;
      margin: 10rpx;
}
.box .box-bd {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: nowrap;
            flex-wrap: nowrap;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
            flex-direction: row;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.box .box-bd .item {
      -webkit-box-flex: 1;
      -webkit-flex: 1 1 auto;
              flex: 1 1 auto;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-flex-wrap: wrap;
              flex-wrap: wrap;
      -webkit-box-orient: horizontal;
      -webkit-box-direction: normal;
      -webkit-flex-direction: row;
              flex-direction: row;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      border-right: 1px solid #f1f1f1;
      margin: 15rpx 0;
}
.box .box-bd .item:last-child {
        border: none;
}
.box .box-bd .item .icon {
        width: 60rpx;
        height: 60rpx;
}
.box .box-bd .item .icon ._img {
          width: 100%;
          height: 100%;
}
.box .box-bd .item .text {
        width: 100%;
        text-align: center;
        margin-top: 10rpx;
        font-size: 24rpx;
}
.list-content {
  background: #fff;
  margin-top: 120rpx;
}
.list {
  width: 100%;
  border-bottom: 15rpx solid  #f1f1f1;
  background: #fff;
}
.list:last-child {
    border: none;
}
.list .li {
    width: 92%;
    height: 100rpx;
    padding: 0 4%;
    border-bottom: 1px solid #f3f3f3;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.list .li.noborder {
      border-bottom: 0;
}
.list .li .icon {
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
      width: 50rpx;
      height: 50rpx;
}
.list .li .icon image {
        width: 50rpx;
        height: 50rpx;
}
.list .li .text {
      padding-left: 20rpx;
      width: 100%;
      color: #666;
      font-size: 24rpx;
}
.list .li .to {
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
      width: 40rpx;
      height: 40rpx;
}

