<view class="{{[isOpen=='true'?'qf_alert qf_alert_open':'qf_alert']}}"><view class="qf_alert_model"><view class="alert_title" style="{{(contentType=='text'?'display:block;':'display:none;')}}">{{content}}</view><view class="alert_main" style="{{(contentType=='input'?'display:block;':'display:none;')}}"><input class="uni-input" focus placeholder="请输入链接地址" data-event-opts="{{[['input',[['__set_model',['','link','$event',[]]]]]]}}" value="{{link}}" bindinput="__e"/></view><view class="alert_main" style="{{(contentType=='image'?'display:block;':'display:none;')}}"><text class="alert_text">从手机选择图片</text><view data-event-opts="{{[['tap',[['chooseImage',['$event']]]]]}}" class="alert_image" bindtap="__e"><image class="choose_image" src="{{imageLink}}" data-src="{{imageLink}}"></image></view></view><view class="alert_btns" style="{{(contentType=='input'||contentType=='image'||btns==2?'display:flex;':'display:none;')}}"><view data-event-opts="{{[['tap',[['closeAlert',['$event']]]]]}}" class="alert_close" bindtap="__e">取消</view><view data-event-opts="{{[['tap',[['submitAlert',['$event']]]]]}}" class="alert_submit" bindtap="__e">确定</view></view><view class="alert_btns" style="{{(contentType=='text'&&btns!=2?'display:block;':'display:none;')}}"><view data-event-opts="{{[['tap',[['submitAlert',['$event']]]]]}}" class="alert_submit2" bindtap="__e">确定</view></view></view></view>