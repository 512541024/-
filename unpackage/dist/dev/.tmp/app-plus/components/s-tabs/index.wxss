.s-tabs {
  width: 100%;
  position: relative;
  overflow-x: hidden;
}
.s-tabs-nav-wrap {
    width: 100%;
    height: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    white-space: nowrap;
}
.s-tabs-nav-wrap .scroll-wrap {
      height: 100%;
}
.s-tabs-nav-wrap .scroll-wrap ::-webkit-scrollbar {
        display: none;
}
.s-tabs-nav-wrap .scroll-view {
      height: 100%;
      position: relative;
}
.s-tabs-nav-wrap .s-tab-nav-view {
      height: 100%;
}
.s-tabs .s-tab-nav {
    display: -webkit-inline-box;
    display: -webkit-inline-flex;
    display: inline-flex;
    height: 100%;
    font-size: 28rpx;
    padding: 0 30rpx;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    box-sizing: border-box;
    cursor: pointer;
}
.s-tabs .s-tab-nav.is-disabled {
      color: #c8c9cc !important;
      cursor: not-allowed;
}
.s-tabs .s-tab-line {
    position: absolute;
    bottom: 0;
    border-radius: 6rpx;
    -webkit-transition: all 0.3s;
    transition: all 0.3s;
}
.s-tabs-content-wrap {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    white-space: nowrap;
}
.s-tabs-content-wrap s-tab {
      width: 100%;
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
      box-sizing: border-box;
}

